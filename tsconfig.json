{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "lib": [
      "esnext"
    ],
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "alwaysStrict": true,
    "rewriteRelativeImportExtensions": true
  },
  "include": [
    "src/**/*"
  ]
}
