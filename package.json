{
  "name": "knub",
  "version": "30.0.0-beta.20",
  "description": "A bot framework for Discord",
  "author": "Miikka Virtanen <contact@mivir.fi>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "mocha --exit -r ts-node/register src/**/*.test.ts -- --trace-warnings",
    "lint": "eslint src",
    "build": "shx touch dist && shx rm -r dist && tsc --sourceMap false && shx cp .npmignore dist/",
    "preversion": "npm run test",
    "prepublishOnly": "npm run test && npm run build",
    "watch": "shx touch dist && shx rm -r dist && tsc --watch",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint",
      "prettier --write"
    ]
  },
  "dependencies": {
    "knub-command-manager": "^8.1.2",
    "ts-essentials": "^6.0.7"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "chai": "^4.2.0",
    "eslint": "^7.2.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^8.0.1",
    "prettier": "^2.0.5",
    "shx": "^0.3.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "peerDependencies": {
    "eris": "^0.13.3"
  },
  "files": [
    "/dist"
  ]
}
